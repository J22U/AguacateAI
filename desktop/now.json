{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@now/static" },
    { "src": "login.html", "use": "@now/static" },
    { "src": "css/**", "use": "@now/static" },
    { "src": "js/**", "use": "@now/static" },
    { "src": "public/**", "use": "@now/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/login", "dest": "/login.html" },
    { "src": "/css/(.*)", "dest": "/css/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
